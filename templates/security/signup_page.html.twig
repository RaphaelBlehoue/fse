{% extends 'security/security_layout.html.twig' %}
{% block title %} {% endblock %}
{% block body %}
    <!-- section image -->
  <div class="col-md-6 col-lg-7 col-xl-8 d-none d-md-block bg-img" style="background-image: url({{ asset('build/front/static/security/bg_signup.jpg') }})" data-overlay="7">
    <div class="row h-100 pl-50">
      <div class="col-md-10 col-lg-8 align-self-end">
        <img src="{{ asset('build/front/static/logo.png') }}" alt="la finance s'engage">
        <br><br><br>
        <br><br>
      </div>
    </div>
  </div>
  <!-- section Login -->
  <div class="col-md-6 col-lg-5 col-xl-4 align-self-center">
    <h5 style="text-align: center !important;">{{ 'Créer votre compte FSE' }}</h5>
    <div class="px-40 py-30">
      {{ form_start(form, {'method': 'post', 'action': path('register'), 'attr': {'class': 'card', novalidate: 'novalidate'} } ) }}
        {% set class = 'form-control' %}
        {% if form.phone.vars.errors|length > 0 %}
            {% set class = 'form-control is-invalid' %}
        {% endif %}
        <div class="row">
            <div class="form-group col-md-6">
                {{ form_widget(form.lastname, {'attr': {'class' :class, 'placeholder' : 'Nom de famille'}}) }}
                {{ form_errors(form.lastname) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_widget(form.firstname, {'attr': {'class' :class, 'placeholder' : 'Prénoms'}}) }}
                {{ form_errors(form.firstname) }}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                {{ form_widget(form.gener, {'attr': {'class' :class, 'placeholder' : 'Selectionnez le sexe'}}) }}
                {{ form_errors(form.gener) }}
            </div>
            <div class="form-group col-md-4">
                {{ form_widget(form.age, {'attr': {'class' :class, 'placeholder' : 'Age'}}) }}
                {{ form_errors(form.age) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_widget(form.email, {'attr': {'class' : class, 'placeholder' : 'Adresse Email'}}) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.phone.country, {'label': false, 'attr': {'class' :class}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.phone.number, {'label': false, 'attr': {'class' :class, 'placeholder' : 'Numero de téléphone'}} ) }}
            {{ form_errors(form.phone) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword, {'attr': {'class' :class, 'placeholder' : 'Mot de passe'}}) }}
            {{ form_errors(form.plainPassword) }}
        </div>

        <!--<div class="form-group flexbox">
          <label class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" checked>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">Remember me</span>
          </label>

          <a class="text-muted hover-primary fs-13" href="#">Forgot password?</a>
        </div> -->

        <div class="form-group">
          <button class="btn btn-bold btn-block btn-primary" type="submit">{{ 'Créer mon compte' }}</button>
        </div>
      {{ form_end(form) }}
      <p class="text-center text-muted fs-13 mt-10">
          {{ 'Vous avez un compte ?' }} <a class="text-primary fw-500" href="{{ path('signin_page') }}">{{ 'Se connecter'|capitalize }}</a>
      </p>
    </div>
  </div>

{% endblock %}
