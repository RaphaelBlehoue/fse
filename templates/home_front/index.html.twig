{% extends 'base.html.twig' %}
{% block title %}
    {{ 'L\'Ecosystème la finance s\'engage' }}
{% endblock %}
{% block slide %}
    {{ include('front/includes/slide.html.twig') }}
{% endblock %}
{% block body %}
    <!-- BEGIN: CONTENT/ORGANISATEUR -->
    <!-- END: CONTENT/ORGANISATEUR -->

    <!-- BEGIN: CONTENT/SLIDERS/INTERVENANT-2 -->
    <div class="c-content-box c-size-md c-bg-grey-1">
        <div class="container">
            <!-- Begin: Testimonals 1 component -->
            <div class="c-content-person-1-slider" data-slider="owl">
                <!-- Begin: Title 1 component -->
                <div class="c-content-title-1 wow animated fadeIn">
                    <h3 class="c-center c-font-uppercase c-font-bold">{{ 'Les Acteurs clés de l\'écosystème financier' }}</h3>
                    <div class="c-line-center c-theme-bg"></div>
                </div>
                <!-- End-->
                <!-- Begin: Owlcarousel -->
                <div class="owl-carousel owl-theme c-theme c-owl-nav-center wow animated fadeInUp" data-items="3" data-slide-speed="8000" data-rtl="false">
                    {% for intervenant in intervenants %}
                        <div class="c-content-person-1 c-option-2 c-shadow">
                            <div class="c-caption c-content-overlay">
                                <div class="c-overlay-wrapper">
                                    <div class="c-overlay-content">
                                        <a href="{{ asset(intervenant.assertPath|imagine_filter('thumb_intervenant')) }}" data-lightbox="fancybox" data-fancybox-group="gallery-2">
                                            <i class="icon-magnifier"></i>
                                        </a>
                                    </div>
                                </div>
                                <img src="{{ asset(intervenant.assertPath|imagine_filter('thumb_intervenant')) }}" class="img-responsive c-overlay-object" alt="{{ intervenant.name }}">
                            </div>
                            <div class="c-body">
                                <div class="c-head">
                                    <div class="c-name c-font-uppercase c-font-bold" title="{{ intervenant.name }}">{{ intervenant.name }}</div>
                                </div>
                                <p>{{ intervenant.office }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- End-->
            </div>
            <!-- End-->
        </div>
    </div>
    <!-- END: CONTENT/SLIDERS/INTERVENANT-2 -->

    <!-- BEGIN: CONTENT/ISOTOPE/GRID-2 -->
    <div class="c-content-box c-size-md c-bg-img-center">
        <div class="container">
            <div class="c-content-title-1">
                <h3 class="c-font-uppercase c-center c-font-bold"><span class="c-bg-grey-1">{{ 'Nos partenaires & sponsors'|upper }}</span></h3>
            </div>
            {% for classification in classifications %}
                <div class="c-content-title-4 c-padding-20">
                    <h3 class="c-font-uppercase c-center c-font-bold c-font-white c-line-strike">
                        <span class="c-bg-green">{{ classification.title|upper }}</span>
                    </h3>
                </div>
                <div class="row c-margin-b-50">
                    {% for partner in classification.partner %}
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow c-shadow">
                                <div class="card-header">
                                    <img class="card-img-top" src="{{ asset(partner.assertPath|imagine_filter('thumb_back_small_300x200'))}}" alt="{{ partner.name }}">
                                </div>
                                <div class="card-body">
                                    <div class="card-text c-center">
                                        <div class="btn-group c-border-top" role="group">
                                            <a href="{{ partner.website }}" target="_blank" class="btn btn-lg c-btn-green-1 c-btn-uppercase c-btn-square c-font-white c-font-white-hover c-bg-green-hover c-btn-product"><i class="fa fa-plus"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
            <div class="clear"></div>
        </div>
    </div><!-- END: CONTENT/ISOTOPE/GRID-2 -->

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/layout/assets/base/js/slide.js') }}" type="text/javascript"></script>
{% endblock %}