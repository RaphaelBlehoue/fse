{% extends 'admin/forum/forum_layout.html.twig' %}

{% block title %} {{ 'Article' }} {% endblock %}
{% block forum_title %} {{ '| Article'|upper }}{% endblock %}

{% block forum_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des articles'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('post_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                        <tr>
                            <th>{{ 'Titre' }}</th>
                            <th>{{ 'En ligne' }}</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{ 'Titre' }}</th>
                            <th>{{ 'En ligne' }}</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.title }}</td>
                            <td>{{ post.online ? 'En ligne' : 'Hors ligne' }}</td>
                            <td>
                                <a class="btn btn-info" href="{{ path('post_show', {'id': post.id}) }}">
                                    <i class="ti-eye"></i>
                                </a>
                                <a class="btn btn-danger" href="{{ path('post_edit', {'id': post.id}) }}">
                                    <i class="ti-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td  colspan="7" class="align-content-center">{{ 'Aucun resultat trouv√©' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}