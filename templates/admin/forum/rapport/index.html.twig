{% extends 'admin/forum/forum_layout.html.twig' %}

{% block title %} {{ 'Rapport de donnée de croissance' }} {% endblock %}
{% block forum_title %} {{ '| Rapport'|upper }}{% endblock %}

{% block forum_content %}
<div class="col-12">
    <div class="card">
        <header class="card-header">
            <h4 class="card-title">{{ 'Liste des rapports de croissances'|upper }}</h4>
            <a class="btn btn-label btn-info" href="{{ path('rapport_new') }}">
                <label><i class="ti-plus"></i></label>
                {{ 'Ajouter un nouveau'}}
            </a>
        </header>
        <div class="card-body">
            <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                <thead>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>{{ 'Date de creation' }}</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>{{ 'Date de creation' }}</th>
                        <th>actions</th>
                    </tr>
                </tfoot>
                <tbody>
                {% for rapport in rapports %}
                    <tr>
                        <td>{{ rapport.title }}</td>
                        <td>{{ rapport.created ? rapport.created|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a class="btn btn-info" href="{{ path('rapport_show', {'id': rapport.id}) }}">
                                <i class="ti-eye"></i>
                            </a>
                            <a class="btn btn-danger" href="{{ path('rapport_edit', {'id': rapport.id}) }}">
                                <i class="ti-pencil"></i>
                            </a>
                        </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td  colspan="7" class="align-content-center">{{ 'Aucun resultat trouvé' }}</td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}