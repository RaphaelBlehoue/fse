{% extends 'admin/forum/forum_layout.html.twig' %}

{% block title %} {{ 'Classification des spornsors & partenaires' }} {% endblock %}
{% block forum_title %} {{ '| Classification des spornsors & partenaires'|upper }}{% endblock %}

{% block forum_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Classification des spornsors & partenaires'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('classification_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>Réference</th>
                        <th>{{ 'Titre' }}</th>
                        <th>Position</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Réference</th>
                        <th>{{ 'Titre' }}</th>
                        <th>Position</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for classification in classifications %}
                        <tr>
                            <td>{{ classification.id }}</td>
                            <td>{{ classification.title }}</td>
                            <td>{{ classification.position }}</td>
                            <td>
                                <a class="btn btn-label btn-info-outline" href="{{ path('classification_show', {'id': classification.id}) }}">
                                    <i class="ti-pencil"></i>
                                </a>
                                <a class="btn btn-label btn-danger-outline" href="{{ path('classification_edit', {'id': classification.id}) }}">
                                    <i class="ti-close"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="align-content-center">{{ 'Aucun resultat trouvé' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}