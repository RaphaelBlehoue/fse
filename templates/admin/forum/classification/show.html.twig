{% extends 'admin/forum/forum_layout.html.twig' %}

{% block title %} {{ 'Classification des spornsors & partenairess' }} {% endblock %}
{% block forum_title %} {{ '| Classification des spornsors & partenairess'|upper }}{% endblock %}

{% block forum_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Informations sur les classifications'|upper }}</h4>
                {{ include('classification/_delete_form.html.twig') }}
            </header>
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ classification.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ classification.title }}</td>
                    </tr>
                    <tr>
                        <th>Position</th>
                        <td>{{ classification.position }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a class="btn btn-label btn-dark" href="{{ path('classification_index') }}">
                    <label><i class="ti-arrow-left"></i></label>
                    {{ 'Retour Ã  la liste'}}
                </a>
                <a class="btn btn-label btn-danger" href="{{ path('classification_edit', {'id': classification.id}) }}">
                    <label><i class="ti-pencil-alt"></i></label>
                    {{ 'Modifier' }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}