{% extends 'admin/forum/forum_layout.html.twig' %}

{% block title %} {{ 'Logo' }} {% endblock %}
{% block forum_title %} {{ '| Logo'|upper }}{% endblock %}

{% block forum_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des Logo'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('logo_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>{{ 'id' }}</th>
                        <th>{{ 'image' }}</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>{{ 'Nom' }}</th>
                        <th>{{ 'site internet' }}</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for logo in logos %}
                        <tr>
                            <td>{{ logo.id }}</td>
                            <td><img class="img-responsive" src="{{ asset(logo.assertPath|imagine_filter('thumb_small')) }}" alt=""></td>
                            <td>
                                <a class="btn btn-square btn-info" href="{{ path('logo_show', {'id': logo.id}) }}">
                                    <i class="ti-pencil"></i>
                                </a>
                                <a class="btn btn-square btn-danger" href="{{ path('logo_edit', {'id': logo.id}) }}">
                                    <i class="ti-close"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">Aucun de resulat trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}