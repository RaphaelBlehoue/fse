{% extends 'admin/forum/forum_layout.html.twig' %}

{% block title %} {{ 'Dates du forum' }} {% endblock %}
{% block forum_title %} {{ '| Dates'|upper }}{% endblock %}

{% block forum_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Date du forum'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('schecule_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>{{ 'Nommage de la Date' }}</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>{{ 'Nommage de la Date' }}</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for schecule in schecules %}
                        <tr>
                            <td>{{ schecule.dateName }}</td>
                            <td>
                                <a class="btn btn-info" href="{{ path('schecule_show', {'id': schecule.id}) }}">
                                    <i class="ti-eye"></i>
                                </a>
                                <a class="btn btn-danger" href="{{ path('schecule_edit', {'id': schecule.id}) }}">
                                    <i class="ti-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td  colspan="7" class="align-content-center">{{ 'Aucun resultat trouv√©' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}