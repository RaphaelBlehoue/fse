{% extends 'admin/forum/forum_layout.html.twig' %}
{% block title %} {{ 'Section du forum' }} {% endblock %}
{% block forum_title %} {{ '| Section du forum'|upper }}{% endblock %}
{% block forum_content %}
    <div class="col-6">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Informations sur la section'|upper }}</h4>
                {{ include('/admin/forum/section/_delete_form.html.twig') }}
            </header>
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>{{ 'Titre de la section' }}</th>
                        <td>{{ section.title }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Interval Horaire' }}</th>
                        <td>{{ section.intervalHoraire }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Lieu de la section' }}</th>
                        <td>{{ section.lieu }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Nom du Tag' }}</th>
                        <td>{{ section.tagName }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a class="btn btn-label btn-dark" href="{{ path('section_index') }}">
                    <label><i class="ti-arrow-left"></i></label>
                    {{ 'Retour Ã  la liste'}}
                </a>
                <a class="btn btn-label btn-danger" href="{{ path('section_edit', {'id': section.id}) }}">
                    <label><i class="ti-pencil-alt"></i></label>
                    {{ 'Modifier' }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}

