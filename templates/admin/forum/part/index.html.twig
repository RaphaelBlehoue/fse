{% extends 'admin/forum/forum_layout.html.twig' %}
{% block title %} {{ 'Partie de la cérémonie' }} {% endblock %}
{% block forum_title %} {{ '| Partie de la cérémonie'|upper }}{% endblock %}
{% block forum_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des Parties'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('part_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for part in parts %}
                        <tr>
                            <td>{{ part.title }}</td>
                            <td>
                                <a class="btn btn-square btn-info" href="{{ path('part_show', {'id': part.id}) }}">
                                    <i class="ti-pencil"></i>
                                </a>
                                <a class="btn btn-square btn-danger" href="{{ path('part_edit', {'id': part.id}) }}">
                                    <i class="ti-close"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">Aucun de resulat trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
