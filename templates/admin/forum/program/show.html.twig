{% extends 'admin/forum/forum_layout.html.twig' %}
{% block title %} {{ 'Programme du forum' }} {% endblock %}
{% block forum_title %} {{ '| Programme'|upper }}{% endblock %}
{% block forum_content %}
    <div class="col-6">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Programme détail'|upper }}</h4>
                {{ include('admin/forum/program/_delete_form.html.twig') }}
            </header>
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <td>{{ program.title }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Hours' }}</th>
                        <td>{{ program.hours }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a class="btn btn-label btn-dark" href="{{ path('program_index') }}">
                    <label><i class="ti-arrow-left"></i></label>
                    {{ 'Retour à la liste'}}
                </a>
                <a class="btn btn-label btn-danger" href="{{ path('program_edit', {'id': program.id}) }}">
                    <label><i class="ti-pencil-alt"></i></label>
                    {{ 'Modifier' }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}