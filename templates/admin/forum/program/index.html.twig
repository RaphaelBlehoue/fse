{% extends 'admin/forum/forum_layout.html.twig' %}

{% block title %} {{ 'Programme du forum' }} {% endblock %}
{% block forum_title %} {{ '| Programme'|upper }}{% endblock %}

{% block forum_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Programme du forum'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('program_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>{{ 'Heure' }}</th>
                        <th>{{ 'contenu' }}</th>
                        <th>{{ 'Part' }}</th>
                        <th>{{ 'Section' }}</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>{{ 'Heure' }}</th>
                        <th>{{ 'contenu' }}</th>
                        <th>{{ 'Part' }}</th>
                        <th>{{ 'Section' }}</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for program in programs %}
                        <tr>
                            <td>{{ program.hours }}</td>
                            <td>{{ program.content|raw }}</td>
                            <td>{{ program.part ? program.part.title : 'null' }}</td>
                            <td>{{ program.section ? program.section.tagName : 'null' }}</td>
                            <td>
                                <a class="btn btn-info" href="{{ path('program_show', {'id': program.id}) }}">
                                    <i class="ti-eye"></i>
                                </a>
                                <a class="btn btn-danger" href="{{ path('program_edit', {'id': program.id}) }}">
                                    <i class="ti-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td  colspan="7" class="align-content-center">{{ 'Aucun resultat trouv√©' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}