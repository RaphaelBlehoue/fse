{% extends 'admin/forum/forum_layout.html.twig' %}

{% block title %} {{ 'Organisateur' }} {% endblock %}
{% block forum_title %} {{ '| Organisateur'|upper }}{% endblock %}
{% block forum_content %}
            <div class="col-6">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title">{{ 'Informations sur organisateurs'|upper }}</h4>
                        {{ include('/admin/forum/organizer/_delete_form.html.twig') }}
                    </header>
                    <img class="card-img-top" src="{{ asset(organizer.assertPath) }}" alt="Card image cap">
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>{{ 'Nom' }}</th>
                                <td>{{ organizer.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'Site internet' }}</th>
                                <td>{{ organizer.website }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'contenu descriptif' }}</th>
                                <td>{{ organizer.content|raw }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-label btn-dark" href="{{ path('organizer_index') }}">
                            <label><i class="ti-arrow-left"></i></label>
                            {{ 'Retour Ã  la liste'}}
                        </a>
                        <a class="btn btn-label btn-danger" href="{{ path('organizer_edit', {'id': organizer.id}) }}">
                            <label><i class="ti-pencil-alt"></i></label>
                            {{ 'Modifier' }}
                        </a>
                    </div>
                </div>
            </div>
{% endblock %}
