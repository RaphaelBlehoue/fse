{% extends 'admin/forum/forum_layout.html.twig' %}

{% block title %} {{ 'Organisateur' }} {% endblock %}
{% block forum_title %} {{ '| Organisateur'|upper }}{% endblock %}

{% block forum_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des Organisateur'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('organizer_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                        <tr>
                            <th>{{ 'Nom' }}</th>
                            <th>{{ 'site internet' }}</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{ 'Nom' }}</th>
                            <th>{{ 'site internet' }}</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for organizer in organizers %}
                        <tr>
                            <td>{{ organizer.name }}</td>
                            <td>{{ organizer.website }}</td>
                            <td>
                                <a class="btn btn-square btn-info" href="{{ path('organizer_show', {'id': organizer.id}) }}">
                                    <i class="ti-pencil"></i>
                                </a>
                                <a class="btn btn-square btn-danger" href="{{ path('organizer_edit', {'id': organizer.id}) }}">
                                    <i class="ti-close"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">Aucun de resulat trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}