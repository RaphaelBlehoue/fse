{% extends 'admin/admin.html.twig' %}

{% block title %} {{ 'Galerie' }} {% endblock %}

{% block body %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des galeries'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('create_draft_gallery') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                        <tr>
                            <th>{{ 'Nom' }}</th>
                            <th>{{ 'Date de creation' }}</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{ 'Nom' }}</th>
                            <th>{{ 'Date de creation' }}</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for gallery in galleries %}
                        <tr>
                            <td>{{ gallery.name }}</td>
                            <td>{{ gallery.created ? gallery.created|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a class="btn btn-outline btn-primary" href="{{ path('gallery_edit', {'id': gallery.id}) }}">
                                   {{ 'Modifier' }}
                                </a>
                                <a class="btn btn-outline btn-danger" href="{{ path('gallery_delete', {'id': gallery.id}) }}">
                                   {{ 'Supprimer' }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">Aucun de resulat trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}