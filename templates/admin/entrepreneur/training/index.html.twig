{% extends 'admin/entrepreneur/entrepreneur_layout.html.twig' %}
{% block title %} {{ 'Thematique de formation' }} {% endblock %}
{% block entrepreneur_title %} {{ '| Thematique de formation'|upper }}{% endblock %}
{% block entrepreneur_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Thematique de formation'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('training_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                        <tr>
                            <th>{{ 'Réference' }}</th>
                            <th>{{ 'Nom' }}</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{ 'Réference' }}</th>
                            <th>{{ 'Nom' }}</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for training in trainings %}
                        <tr>
                            <td>{{ training.id }}</td>
                            <td>{{ training.name }}</td>
                            <td>
                                <a class="btn btn-label btn-danger-outline"
                                   href="{{ path('training_edit', {'id': training.id}) }}">
                                    <label for=""><i class="ti-close"></i></label> {{ 'Modifier' }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="align-content-center" colspan="4">{{ 'Aucun resultat trouvé' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}