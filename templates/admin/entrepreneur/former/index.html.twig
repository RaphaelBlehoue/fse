{% extends 'base.html.twig' %}

{% block title %}Former index{% endblock %}

{% block body %}
    <h1>Former index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for former in formers %}
            <tr>
                <td>{{ former.id }}</td>
                <td>{{ former.name }}</td>
                <td>{{ former.slug }}</td>
                <td>{{ former.content }}</td>
                <td>
                    <a href="{{ path('former_show', {'id': former.id}) }}">show</a>
                    <a href="{{ path('former_edit', {'id': former.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('former_new') }}">Create new</a>
{% endblock %}