{% extends 'fse/fse_layout.html.twig' %}

{% block title %} {{ 'Intervenant' }} {% endblock %}
{% block fse_title %} {{ '| Intervenants'|upper }}{% endblock %}

{% block fse_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des intervenants'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('intervenant_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>ImageSize</th>
                        <th>ImageName</th>
                        <th>Name</th>
                        <th>Office</th>
                        <th>Position</th>
                        <th>Created</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>ImageSize</th>
                        <th>ImageName</th>
                        <th>Name</th>
                        <th>Office</th>
                        <th>Position</th>
                        <th>Created</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for intervenant in intervenants %}
                        <tr>
                            <td>{{ intervenant.id }}</td>
                            <td>{{ intervenant.imageSize }}</td>
                            <td>{{ intervenant.imageName }}</td>
                            <td>{{ intervenant.name }}</td>
                            <td>{{ intervenant.office }}</td>
                            <td>{{ intervenant.position }}</td>
                            <td>{{ intervenant.created ? intervenant.created|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a class="btn btn-label btn-info-outline" href="{{ path('intervenant_show', {'id': intervenant.id}) }}">
                                    <label><i class="ti-eye"></i></label> {{ 'afficher'|capitalize }}
                                </a>
                                <a class="btn btn-label btn-danger-outline" href="{{ path('intervenant_edit', {'id': intervenant.id}) }}">
                                    <label><i class="ti-eye"></i></label> {{ 'modifier'|capitalize }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="align-content-center">{{ 'Aucun resultat trouv√©' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}