{% extends 'fse/fse_layout.html.twig' %}

        {% block title %} {{ 'Intervenant' }} {% endblock %}
        {% block fse_title %} {{ '| Intervenants'|upper }}{% endblock %}

        {% block fse_content %}
            <div class="col-6">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title">{{ 'Informations Intervenant'|upper }}</h4>
                        {{ include('intervenant/_delete_form.html.twig') }}
                    </header>
                    <img class="card-img-top" src="{{ asset(intervenant.assertPath|imagine_filter('thumb_intervenant')) }}" alt="Card image cap">
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ intervenant.id }}</td>
                            </tr>
                            <tr>
                                <th>ImageSize</th>
                                <td>{{ intervenant.imageSize }}</td>
                            </tr>
                            <tr>
                                <th>ImageName</th>
                                <td>{{ intervenant.imageName }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ intervenant.name }}</td>
                            </tr>
                            <tr>
                                <th>Office</th>
                                <td>{{ intervenant.office }}</td>
                            </tr>
                            <tr>
                                <th>Position</th>
                                <td>{{ intervenant.position }}</td>
                            </tr>
                            <tr>
                                <th>Created</th>
                                <td>{{ intervenant.created ? intervenant.created|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-label btn-dark" href="{{ path('intervenant_index') }}">
                            <label><i class="ti-arrow-left"></i></label>
                            {{ 'Retour Ã  la liste'}}
                        </a>
                        <a class="btn btn-label btn-danger" href="{{ path('intervenant_edit', {'id': intervenant.id}) }}">
                            <label><i class="ti-pencil-alt"></i></label>
                            {{ 'Modifier' }}
                        </a>
                    </div>
                </div>
            </div>
        {% endblock %}
