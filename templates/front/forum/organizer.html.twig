{% extends 'base.html.twig' %}
{% block title %}{{ 'Les organisateurs du forum' }}{% endblock %}
{% block base_nav %} {{ include('front/includes/nav.html.twig',{'nav_class':'c-layout-header-4 c-layout-header-default-mobile'}) }} {% endblock %}
{% block body %}
    <!-- BEGIN: LAYOUT/BREADCRUMBS/BREADCRUMBS-3 -->
    <div class="card">
        <div class="c-content-divider c-divider-sm c-icon-bg">
            <i class="icon-graph c-rounded c-theme-bg c-font-white"></i>
        </div>
        <h3 class="c-center c-bg-green-1 c-font-uppercase c-font-bold c-font-35 c-font-white c-font-slim c-padding-20">
            {{ 'LES ORGANISATEURS' }}
        </h3>
    </div>
    <!-- END: LAYOUT/BREADCRUMBS/BREADCRUMBS-3 -->
    <div class="c-content-box c-size-lg c-bg-grey-1">
        <div class="container">
            <div class="c-margin-b-50">
                <div class="row">
                    <div class="c-content-blog-post-card-1-grid">
                        <div class="row">
                            {% if organizers|length > 0 %}
                                {% for organizer in organizers %}
                                    <div class="col-md-6">
                                        <div class="c-content-blog-post-card-1 c-option-2 c-bordered box-shadow c-shadow">
                                            <div class="c-media c-content-overlay">
                                                <a href="{{ organizer.website }}" target="_blank">
                                                    <img class="c-overlay-object img-responsive custom-center"  src="{{ organizer.assertPath|imagine_filter('thumb_organizer') }}" alt="{{ organizer.name }}">
                                                </a>
                                            </div>
                                            <div class="c-body">
                                                <div class="c-content-divider c-icon-bg">
                                                    <i class="icon-drop c-rounded c-font-white"></i>
                                                </div>
                                                <p>{{ organizer.content|striptags('<a>')|truncate(200, false, '...')|raw }}</p>
                                                <div class="clear"></div>
                                                <div class="c-center c-margin-t-50">
                                                    <a href="{{ organizer.website }}" title="{{ organizer.name }}" target="_blank" class="btn btn-sm c-btn-green-1 c-btn-uppercase c-btn-bold c-btn-border-1x c-btn-square">{{  'plus de d√©tail' }}</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

