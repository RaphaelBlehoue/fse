{% extends 'base.html.twig' %}
{% block title %}{{ 'Les organisateurs du forum' }}{% endblock %}
{% block base_nav %} {{ include('front/includes/nav.html.twig',{'nav_class':'c-layout-header-4 c-layout-header-default-mobile'}) }} {% endblock %}
{% block body %}
<!-- BEGIN: LAYOUT/BREADCRUMBS/BREADCRUMBS-3 -->
<div class="c-layout-breadcrumbs-1 c-bgimage c-subtitle c-fonts-uppercase c-fonts-bold c-bg-img-center" style="background-image: url({{ asset('build/web/static/banner_partner.jpg') }})">
    <div class="container">
        <div class="c-page-title c-pull-left c-content-title-1">
            <h3 class="c-left c-font-uppercase c-font-bold c-font-white c-font-20 c-font-slim">{{ 'Nos partenaires & sponsors' }}</h3>
            <div class="c-line-left c-theme-bg"></div>
        </div>
        <ul class="c-page-breadcrumbs c-theme-nav c-pull-right c-fonts-regular">
            <li><a href="{{ path('homepage') }}" class="c-font-white">{{ 'Accueil' }}</a></li>
            <li class="c-font-white">/</li>
            <li><a href="{{ app.request.attributes.get('_route') }}" class="c-font-white">{{ 'Partenaires' }}</a></li>
        </ul>
    </div>
</div><!-- END: LAYOUT/BREADCRUMBS/BREADCRUMBS-3 -->

    <!-- BEGIN: CONTENT/PARTENAIRE -->
    <div class="c-content-box c-size-md c-bg-img-center">
        <div class="container">
            {% for classification in classifications %}
                <div class="c-content-title-4 c-padding-20">
                    <h3 class="c-font-uppercase c-center c-font-bold c-font-white c-line-strike">
                        <span class="c-bg-green">{{ classification.title|upper }}</span>
                    </h3>
                </div>
                <div class="row c-margin-b-50">
                    {% for partner in classification.partner %}
                        <div class="col-md-4 c-margin-b-20">
                            <div class="card mb-4 box-shadow c-shadow">
                                <div class="card-header">
                                    <img class="card-img-top" src="{{ asset(partner.assertPath|imagine_filter('thumb_back_small_300x200'))}}" alt="{{ partner.name }}">
                                </div>
                                <div class="card-body">
                                    <div class="card-text c-center">
                                        <div class="btn-group c-border-top" role="group">
                                            <a href="{{ partner.website }}" target="_blank" class="btn btn-lg c-btn-green-1 c-btn-uppercase c-btn-square c-font-white c-font-white-hover c-bg-green-hover c-btn-product"><i class="fa fa-plus"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
            <div class="clear"></div>
        </div>
    </div>
    <!-- END: CONTENT/PARTENAIRE -->
{% endblock %}
