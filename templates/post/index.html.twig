{% extends 'fse/fse_layout.html.twig' %}

{% block title %} {{ 'Article' }} {% endblock %}
{% block fse_title %} {{ '| Article'|upper }}{% endblock %}

{% block fse_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des articles'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('post_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Created</th>
                            <th>Online</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Online</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.id }}</td>
                            <td>{{ post.title }}</td>
                            <td>{{ post.created ? post.created|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ post.online ? 'En ligne' : 'Hors ligne' }}</td>
                            <td>
                                <a class="btn btn-label btn-info-outline" href="{{ path('post_show', {'id': post.id}) }}">
                                    <label><i class="ti-eye"></i></label> {{ 'afficher'|capitalize }}
                                </a>
                                <a class="btn btn-label btn-danger-outline" href="{{ path('post_edit', {'id': post.id}) }}">
                                    <label><i class="ti-eye"></i></label> {{ 'modifier'|capitalize }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td  colspan="7" class="align-content-center">{{ 'Aucun resultat trouv√©' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}