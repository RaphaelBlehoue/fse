{% extends 'fse/fse_layout.html.twig' %}

{% block title %} {{ 'Partenaires' }} {% endblock %}
{% block fse_title %} {{ '| Partenaires'|upper }}{% endblock %}

{% block fse_content %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des partenaires'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('partner_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Website</th>
                        <th>Created</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Website</th>
                        <th>Created</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for partner in partners %}
                        <tr>
                            <td>{{ partner.id }}</td>
                            <td>{{ partner.name }}</td>
                            <td>{{ partner.website }}</td>
                            <td>{{ partner.created ? partner.created|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a class="btn btn-label btn-info-outline" href="{{ path('partner_show', {'id': partner.id}) }}">
                                    <label><i class="ti-eye"></i></label> {{ 'afficher'|capitalize }}
                                </a>
                                <a class="btn btn-label btn-danger-outline" href="{{ path('partner_edit', {'id': partner.id}) }}">
                                    <label><i class="ti-eye"></i></label> {{ 'modifier'|capitalize }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="align-content-center">{{ 'Aucun resultat trouvÃ©' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}